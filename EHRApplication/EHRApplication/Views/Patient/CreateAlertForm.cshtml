@inject EHRApplication.Services.IListService ListService
@model EHRApplication.ViewModels.PortalViewModel;
@{
    ViewData["Title"] = "myEHR | Add Patient Alert";
    <link rel="stylesheet" href="~/css/forms.css">
    var mhn = ViewBag.MHN;
    <script src="~/js/validation.js"></script>
}

<section class="my-5 w-75" data-bs-theme="auto">

    <div class="card-header" data-bs-theme="auto">
        <h3 class="my-3">Add Alert</h3>
    </div>

    <div class="card-body" data-bs-theme="auto">
        <form method="post" id="ptAlertForm" enctype="multipart/form-data">

            <input asp-for="Alert.MHN" value="@mhn" hidden />

            <!-- Alert Name -->
            <div class="form-group">
                <label for="alertName">Alert Name:</label>
                <input asp-for="Alert.alertName" type="text" id="alertName" name="alertName" class="form-control" data-bs-theme="auto" onblur="validateRequiredTextInput('alertName', 100, 'name for the alert')" />
                <span asp-validation-for="Alert.alertName" id="alertNameError" class="validation-msg"></span>
            </div>

            <!-- Alert Start Date Picker -->
            <div class="form-group">
                <label for="startDate">Start Date:</label>
                <input name="startDate" asp-for="Alert.startDate" type="date" id="startDate" class="form-control" data-bs-theme="auto" />
                <span asp-validation-for="Alert.startDate" id="startDateError" class="validation-msg"></span>
            </div>

            <!-- Alert End Date Picker -->
            <div class="form-group">
                <label for="endDate">End Date:</label>
                <input name="endDate" asp-for="Alert.endDate" type="date" id="endDate" class="form-control" data-bs-theme="auto" />
                <span asp-validation-for="Alert.endDate" id="endDateError" class="validation-msg"></span>
            </div>

            <!-- Active Status -->
            <div class="form-group">
                <label for="activeStatus">Active?</label>
                <div class="col-sm-6 ms-4">
                    <div class="race-column">
                        <input name="activeStatus" type="radio" id="Yes" asp-for="Alert.activeStatus" value="Active" />
                        <label for="Yes" style="font-weight: normal;">Yes</label><br />
                        <input name="activeStatus" type="radio" id="No" asp-for="Alert.activeStatus" value="Inactive" />
                        <label for="No" style="font-weight: normal;">No</label><br />
                    </div>
                </div>
                <span asp-validation-for="Alert.activeStatus" class="validation-msg"></span>
            </div>

            <!-- Submit/Cancel Buttons -->
            <div class="mt-3 d-flex justify-content-center">
                <a type="button" class="btn btn-secondary me-2" onclick="window.history.back()">Cancel</a>
                <input type="submit" class="btn blue-button" data-bs-theme="auto" />
            </div>
        </form>
    </div>
</section>