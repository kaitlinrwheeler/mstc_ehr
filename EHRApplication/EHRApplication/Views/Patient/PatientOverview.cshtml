@model PatientDemographic

@{
    ViewData["Title"] = "Patient Details";
    <link rel="stylesheet" href="~/css/overview.css" asp-append-version="true" />
}



<div class="container mt-5" data-bs-theme="auto">
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="h4 card-header" data-bs-theme="auto">
                    Demographic Info
                </div>
                <div class="card-body" data-bs-theme="auto">
                    <table class="table table-striped">
                        <tbody>
                            <tr class ="hover-highlighting">
                                <th scope="row">Patient ID:</th>
                                <td>@Model.MHN</td>
                            </tr>
                            <tr class="hover-highlighting">
                                <th scope="row">First Name:</th>
                                <td>@Model.firstName</td>
                            </tr>
                            <tr class="hover-highlighting">
                                <th scope="row">Last Name:</th>
                                <td>@Model.lastName</td>
                            </tr>
                            <tr class="hover-highlighting">
                                <th scope="row">Suffix:</th>
                                <td>@Model.suffix</td>
                            </tr>
                            <tr class="hover-highlighting">
                                <th scope="row">Preferred Pronouns:</th>
                                <td>@Model.preferredPronouns</td>
                            </tr>
                            <tr class="hover-highlighting">
                                <th scope="row">Date of Birth:</th>
                                <td>@Model.DOB.ToString("yyyy-MM-dd")</td>
                            </tr>
                            <tr class="hover-highlighting">
                                <th scope="row">Gender:</th>
                                <td>@Model.gender</td>
                            </tr>
                            <tr class="hover-highlighting">
                                <th scope="row">Preferred Language:</th>
                                <td>@Model.preferredLanguage</td>
                            </tr>
                            <tr class="hover-highlighting">
                                <th scope="row">Ethnicity:</th>
                                <td>@Model.ethnicity</td>
                            </tr>
                            <tr class="hover-highlighting">
                                <th scope="row">Race:</th>
                                <td>@Model.race</td>
                            </tr>
                            <tr class="hover-highlighting">
                                <th scope="row">Religion:</th>
                                <td>@Model.religion</td>
                            </tr>
                            <tr class="hover-highlighting">
                                <th scope="row">Primary Physician:</th>
                                <td>@Model.providers.firstName @Model.providers.lastName, @Model.providers.specialty</td>
                            </tr>
                            <tr class="hover-highlighting">
                                <th scope="row">Legal Guardian1:</th>
                                <td>@Model.legalGuardian1</td>
                            </tr>
                            <tr class="hover-highlighting">
                                <th scope="row">Legal Guardian2:</th>
                                <td>@Model.legalGuardian2</td>
                            </tr>
                            <tr class="hover-highlighting">
                                <th scope="row">Previous Name:</th>
                                <td>@Model.previousName</td>
                            </tr>
                            <tr class="hover-highlighting">
                                <th scope="row">Gender Assigned At Birth:</th>
                                <td>@Model.genderAssignedAtBirth</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12 mb-3">
                    <!--Make height 422px-->
                    <div class="card card-cover">
                        <img src="~/images/blank-profile-picture.png" class="card-img-top" alt="Patient Image">
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card">
                        <div class="h4 card-header" data-bs-theme="auto">
                            Contact Info
                        </div>
                        <div class="card-body" data-bs-theme="auto">
                            <table class="table table-striped">
                                <tbody>
                                    <tr>
                                        <th scope="row">Address:</th>
                                        <td>@Model.ContactId.address</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">City:</th>
                                        <td>@Model.ContactId.city</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">State:</th>
                                        <td>@Model.ContactId.state</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Zip Code:</th>
                                        <td>@Model.ContactId.zipcode</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Phone Number:</th>
                                        <td>@Model.ContactId.zipcode</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Email:</th>
                                        <td>@Model.ContactId.email</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>