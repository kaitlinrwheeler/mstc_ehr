@{
    @model EHRApplication.ViewModels.PortalViewModel
    ViewData["Title"] = "Patient Problems";
}


<section class="my-5 w-75 m-auto">
    <div class="card mb-3 shadow-sm" data-bs-theme="auto">
        <div class="h4 card-header text-center" data-bs-theme="auto">
            Patient Problems
        </div>
        <div class="card-body overflow-auto" data-bs-theme="auto">
            @if (Model != null && Model.PatientProblems != null && Model.PatientProblems.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <!-- Commented out in case we want to view mhn later for testing purposes.-->
@*                             <th scope="col">MHN:</th>
 *@                            
                            <th scope="col">Priority:</th>
                            <th scope="col">Description:</th>
                            <th scope="col">ICD_10:</th>
                            <th scope="col">Immediacy:</th>
                            <th scope="col">Created On:</th>
                            <th scope="col">Created By:</th>
                            <th scope="col">Active:</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var problem in Model.PatientProblems)
                        {
                            <tr class="hover-highlighting">
                                <!-- Commented out in case we want to view mhn later for testing purposes.-->
@*                                 <td>@problem.MHN</td>
 *@
                                <td style='background-color: @(problem.priority == "High" ? "yellow" : "unset"); color: @(problem.priority == "High" ? "black" : "inherit")'>
                                    @if (problem.priority == "High")
                                    {
                                        <span>
                                            <i class='fa-solid fa-triangle-exclamation me-1'></i>
                                        </span>
                                    }
                                    @problem.priority
                                </td>


                                <td>@problem.description</td>
                                <td>@problem.ICD_10</td>
                                <td>@problem.immediacy</td>
                                <td>@problem.createdAt.ToString("MM/dd/yyyy")</td>
                                <td>@problem.providers.firstName @problem.providers.lastName</td>
                                <td>@(problem.active ? "Yes" : "No")</td>                
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h1 class="text-center display-6">No problems found.</h1>
            }
        </div>
    </div>
</section>
