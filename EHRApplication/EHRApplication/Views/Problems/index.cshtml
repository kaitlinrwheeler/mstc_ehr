@{
    @model EHRApplication.ViewModels.PortalViewModel
    ViewData["Title"] = "myEHR | Patient Problems";
    int mhn = ViewBag.MHN;
    <script src="~/js/patientProblems.js" defer></script>
}


<section class="my-5 w-75 m-auto">
    <div class="card mb-3 shadow-sm" data-bs-theme="auto">
        <div class="h4 card-header d-flex justify-content-between align-items-center" data-bs-theme="auto">
            <div class="text-center w-100">Patient Problems</div>
            @if (User.IsInRole("Admin"))
            {                
                <div>
                    <a type="button" class="btn blue-button d-flex align-items-center" asp-controller="Problems" asp-action="CreateProblemForm" asp-route-mhn="@mhn">
                        <i class="fa-solid fa-plus me-2"></i>
                        <span>Add</span>
                    </a>
                </div>
            }
        </div>
        <div class="card-body overflow-auto" data-bs-theme="auto">
            @if (Model != null && Model.PatientProblems != null && Model.PatientProblems.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Priority:</th>
                            <th scope="col">Description:</th>
                            <th scope="col">ICD-10:</th>
                            <th scope="col">Immediacy:</th>
                            <th scope="col">Created On:</th>
                            <th scope="col">Created By:</th>
                            <th scope="col">Status:</th>
                            @if (User.IsInRole("Admin"))
                            {                                
                                <th scope="col"></th> <!--empty column for the edit button-->
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var problem in Model.PatientProblems)
                        {
                            <tr id="row-@problem.patientProblemsId" class="hover-highlighting">
                                <!-- Commented out in case we want to view mhn later for testing purposes.-->
@*                                 <td>@problem.MHN</td>
 *@

                                @if (problem.active == true)
                                {                                    
                                    <td style='background-color: @(problem.priority == "High" ? "yellow" : "unset"); color: @(problem.priority == "High" ? "black" : "inherit")'>
                                        @if (problem.priority == "High" )
                                        {
                                            <span>
                                                <i class='fa-solid fa-triangle-exclamation me-1'></i>
                                            </span>
                                        }
                                        @problem.priority
                                    </td>
                                }
                                else
                                {
                                    <td>@problem.priority</td>
                                }


                                <td>@problem.description</td>
                                <td>@problem.ICD_10</td>
                                <td>@problem.immediacy</td>
                                <td>@problem.createdAt.ToString("MM/dd/yyyy")</td>
                                <td>@problem.providers.firstName @problem.providers.lastName, @problem.providers.providerId</td>
                                <td>@(problem.active ? "Active" : "Inactive")</td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <td>
                                        <a type="button" class="btn blue-button text-nowrap" asp-controller="Problems" asp-action="EditProblemForm" asp-route-problemId="@problem.patientProblemsId"><i class="fa-solid fa-pen me-2"></i>Edit</a>
                                        <button type="submit" class="btn delete-button text-nowrap" data-message="@problem.description" data-patientProblemId="@problem.patientProblemsId">
                                            <i class="fa-solid fa-trash me-2"></i>Delete
                                        </button>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h1 class="text-center display-6">No problems found.</h1>
            }
        </div>
    </div>
</section>


<!-- Delete confirmation modal-->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true" data-bs-theme="auto">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the problem <span id="messagePlaceholder"></span>?
            </div>
            <div class="modal-footer">
                <button id="cancelButton" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>