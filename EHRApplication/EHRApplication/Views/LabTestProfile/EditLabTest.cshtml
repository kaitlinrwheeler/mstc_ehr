@inject EHRApplication.Services.IListService ListService
@model LabTestProfile
@{
    ViewData["Title"] = "myEHR | Edit Lab Test";
    <link rel="stylesheet" href="~/css/forms.css">

    <script src="~/js/validation.js"></script>
    <script src="~/js/CharacterCounter.js"></script>
}

<section class="my-5 w-75" data-bs-theme="auto">
    <!--This is coded here to only display if you are logged in as an Admin-->
    @if (User.IsInRole("Admin"))
    {        
        <div class="card-header" data-bs-theme="auto">
            <h3 class="my-3">Edit Lab Test</h3>
        </div>

        <div class="card-body" data-bs-theme="auto">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="testName">Test Name:</label>
                    <input asp-for="testName" type="text" name="testName" id="testName" class="form-control" data-bs-theme="auto" maxlength="100" onblur="validateRequiredTextInputAlphaNumeric('testName', 100, 'test name')" />
                    <span asp-validation-for="testName" id="testNameError" class="validation-msg"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="description">Description:</label>
                    <textarea asp-for="description" type="text" id="description" name="description" class="form-control" maxlength="100" data-bs-theme="auto" oninput="updateCharacterCount('description', 'descriptionCounter')" onblur="validateRequiredTextInputAlphaNumeric('description', 100, 'description')"></textarea>
                    <span id="descriptionCounter" class="character-counter">0/100</span>
                    <span asp-validation-for="description" id="descriptionError" class="validation-msg"></span>
                </div>

                <div class="form-group">
                    <label for="units">Units:</label>
                    <input asp-for="units" type="text" name="units" id="units" class="form-control" maxlength="100" onblur="validateRequiredTextInputAlphaNumeric('units', 100,'units')" data-bs-theme="auto" />
                    <span asp-validation-for="units" id="unitsError" class="validation-msg"></span>
                </div>

                <div class="form-group">
                    <label for="referenceRange">Reference Range:</label>
                    <input asp-for="referenceRange" type="text" name="referenceRange" id="referenceRange" class="form-control" data-bs-theme="auto" maxlength="100" onblur="validateRequiredTextInputAlphaNumeric('referenceRange', 100,  'reference range')" />
                    <span asp-validation-for="referenceRange" id="referenceRangeError" class="validation-msg"></span>
                </div>

                <div class="form-group">
                    <label for="category">Category:</label>
                    <input asp-for="category" type="text" name="category" id="category" class="form-control" data-bs-theme="auto" maxlength="100" onblur="validateRequiredTextInputAlphaNumeric('category', 100,  'category')" />
                    <span asp-validation-for="category" id="categoryError" class="validation-msg"></span>
                </div>

                <div class="mt-3 d-flex justify-content-center">
                    <a type="button" class="btn btn-secondary me-2" asp-controller="LabTestProfile" asp-action="AllLabTests">Cancel</a>
                    <input type="submit" class="btn blue-button" data-bs-theme="auto" />
                </div>
            </form>
        </div>
    }
    else
    {
        //This makes the page redirect to the previous page.
        <script>
            window.history.back();
        </script>

        //This is a fail safe if the javascript is turned off it will still show an error.
        <div class="card-body" data-bs-theme="auto">
            Admin permission required.<br />
            <a type="button" class="btn btn-secondary me-2" value="Cancel" onclick="window.history.back()">Cancel</a>
            <a type="button" class="btn blue-button" asp-area="" asp-controller="Login_Register" asp-action="Login">Login</a>
        </div>
    }
</section>