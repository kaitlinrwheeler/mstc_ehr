@inject EHRApplication.Services.IListService ListService
@model LabTestProfile
@{
    ViewData["Title"] = "myEHR | Create New Lab Test";
    <link rel="stylesheet" href="~/css/forms.css">

    <script src="~/js/validation.js"></script>
}

<section class="my-5 w-75" data-bs-theme="auto">

    <div class="card-header" data-bs-theme="auto">
        <h3 class="my-3">Create Lab Test</h3>
    </div>

    <div class="card-body" data-bs-theme="auto">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="testName">Test Name:</label>
                <input asp-for="testName" type="text" name="testName" class="form-control" data-bs-theme="auto" onblur="validateRequiredTextInput('FirstName', 25, 'first name')" />
                <span asp-validation-for="testName" class="validation-msg"></span>
            </div>

            <div class="form-group">
                <label for="description">description:</label>
                <input asp-for="description" type="texta" id="MiddleName" name="description" class="form-control" data-bs-theme="auto" onblur="validateOptionalTextInput('MiddleName', 25, 'middle name')" />
                <span asp-validation-for="description" class="validation-msg"></span>
            </div>

            <div class="form-group">
                <label for="units">Units:</label>
                <input asp-for="units" type="text" name="units" class="form-control" onblur="validateRequiredTextInput('LastName', 25,'last name')" data-bs-theme="auto" />
                <span asp-validation-for="units" class="validation-msg"></span>
            </div>

            <div class="form-group">
                <label for="referenceRange">Reference Range:</label>
                <input asp-for="referenceRange" type="text" name="referenceRange" class="form-control" data-bs-theme="auto" onblur="validateOptionalTextInput('Suffix', 20,  'suffix')" />
                <span asp-validation-for="referenceRange" class="validation-msg"></span>
            </div>

            <div class="form-group">
                <label for="category">Category:</label>
                <input asp-for="category" type="text" name="category" class="form-control" data-bs-theme="auto" onblur="validateOptionalTextInput('PreviousName', 60,  'previous name')" />
                <span asp-validation-for="category" class="validation-msg"></span>
            </div>





            <div class="mt-3 d-flex justify-content-center">
                <input type="submit" class="btn blue-button" data-bs-theme="auto" />
            </div>
        </form>
    </div>
</section>