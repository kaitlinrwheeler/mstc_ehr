@model LoginAccount
@{
    ViewData["Title"] = "myEHR | Login";
}
<!--This is a message banner displaying on the screen for the user to see-->
@if (TempData["RegisterMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["RegisterMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<!--This is a message banner displaying on the screen for the user to see-->
@if (TempData["logoutMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["LogoutMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="container mb-5 overflow-hidden">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-5">
            <div class="card mx-auto shadow-sm" data-bs-theme="auto">
                <div class="h5 card-header text-center" data-bs-theme="auto">Login</div>
                <div class="card-body" data-bs-theme="auto">
                    <!-- Login Form -->
                    <form method="post" onsubmit="return validateForm()">
                        <!-- Email/MSTC Email Field -->
                        <div class="form-group mb-3">
                            <label for="email" class="form-label">MSTC Email:</label>
                            <input asp-for="Email" class="form-control" id="email" name="email"
                                   title="Please enter your MSTC email address."
                                   maxlength="100"
                                   onchange="validateEmailField(this.value)" data-bs-theme="auto" />
                            <!-- Error message span -->
                            <span asp-validation-for="Email" class="validation-msg"></span>
                        </div>
                        <!-- Password Field -->
                        <div class="form-group mb-3">
                            <label for="password" class="form-label">Password:</label>
                            <input asp-for="Password" type="password" class="form-control" id="password" name="password"
                                   onchange="validatePasswordField(this.value)" data-bs-theme="auto" />
                            <!-- Error message span -->
                            <span asp-validation-for="Password" class="validation-msg"></span>
                        </div>

                        <div class="mb-3 text-center">
                            <button type="submit" class="btn blue-button" data-bs-theme="auto">Login</button>
                        </div>
                    </form>

                    <!-- Forgot Password -->
                    <div class="text-center">
                        @* <a class="dark-links" data-bs-theme="auto" asp-action="Register">Register Here</a><br /> *@
                        <a class="dark-links" data-bs-theme="auto" asp-action="ForgotPassword">Forgot Password?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>