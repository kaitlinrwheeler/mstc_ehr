@model RegisterAccount
@{
    ViewData["Title"] = "Register";

}
<!--This is a message banner displaying on the screen for the user to see-->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-warning">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<div class="container my-5 overflow-hidden">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-5">
            <div class="card mx-auto shadow-sm" data-bs-theme="auto">
                <div class="h5 card-header text-center" data-bs-theme="auto">Register</div>
                <div class="card-body" data-bs-theme="auto">
                    <!-- Register Form -->
                    <form method="post">
                        <!-- First Name Field -->
                        <div class="form-group mb-3">
                            <label for="firstname" class="form-label">First Name:</label>
                            <input asp-for="Firstname" class="form-control" id="firstname" name="Firstname"
                                   title="Please enter your first name"
                                   onchange="" data-bs-theme="auto" />
                            <!-- Error message span -->
                            <span asp-validation-for="Firstname" class="validation-msg"></span>
                        </div>
                        <!-- Last Name Field -->
                        <div class="form-group mb-3">
                            <label for="lastname" class="form-label">Last Name:</label>
                            <input asp-for="Lastname" class="form-control" id="lastname" name="Lastname"
                                   title="Please enter your last name."
                                   onchange="" data-bs-theme="auto" />
                            <!-- Error message span -->
                            <span asp-validation-for="Lastname" class="validation-msg"></span>
                        </div>
                        <!-- Username/MSTC Email Field -->
                        <div class="form-group mb-3">
                            <label for="username" class="form-label">MSTC Email:</label>
                            <input asp-for="Email" class="form-control" id="username" name="email"
                                   title="Please enter your MSTC email address."
                                   onchange=""  data-bs-theme="auto" />
                            <!-- Error message span -->
                            <span asp-validation-for="Email" class="validation-msg"></span>
                        </div>
                        <!-- Password Field -->
                        <div class="form-group mb-3">
                            <label for="password" class="form-label">Password:
                                <div class="question-wrapper" id="questionWrapper" onmouseover="showRequirements()" onmouseout="hideRequirements()">
                                    <div class="question-icon rounded-circle" data-bs-theme="auto" id="questionIcon">
                                        ?
                                    </div>
                                    <div class="requirements-popup" data-bs-theme="auto" id="requirementsPopup">
                                        <ul>
                                            <li>At least 8 characters</li>
                                            <li>At least 1 uppercase letter</li>
                                            <li>At least 1 lowercase letter</li>
                                            <li>At least 1 number</li>
                                            <li>At least 1 special character</li>
                                        </ul>
                                    </div>
                                </div>
                            </label>
                            <input asp-for="Password" type="password" class="form-control" id="password" name="password"
                                   onchange=""  data-bs-theme="auto" />
                            <!-- Error message span -->
                            <span asp-validation-for="Password" class="validation-msg"></span>
                        </div>
                        <!-- Confirm Password Field -->
                        <div class="form-group mb-3">
                            <label for="confirmpassword" class="form-label">Confirm Password:</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmpassword" name="confirmpassword"
                                   onchange=""  data-bs-theme="auto" />
                            <!-- Error message span -->
                            <span asp-validation-for="ConfirmPassword" class="validation-msg"></span>
                        </div>

                        <div class="mb-3 text-center">
                            <button type="submit" class="btn blue-button" data-bs-theme="auto">Register</button>
                        </div>

                        
                    </form>
                    <div class="text-center">
                        <a class="dark-links" data-bs-theme="auto" asp-action="Login">Already Have An Account?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>