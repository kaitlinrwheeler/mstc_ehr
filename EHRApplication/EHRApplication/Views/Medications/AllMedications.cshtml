@{
    ViewData["Title"] = "myEHR | All Medications";
    @model List<MedicationProfile>
    <script src="~/js/allMedications.js" defer></script>
}


<section class="my-5 w-75 m-auto">
    <div class="card mb-3 shadow-sm" data-bs-theme="auto">
        <div class="h4 card-header d-flex justify-content-between align-items-center" data-bs-theme="auto">
            <div class="h4 card-header text-center" data-bs-theme="auto">
                All Medications
            </div>
            <div>
                <a type="button" class="btn blue-button d-flex align-items-center" asp-controller="Patient" asp-action="Index">
                    <i class="fa-solid fa-plus me-2"></i>
                    <span>Add</span>
                </a>
            </div>
        </div>
        <div class="card-body" data-bs-theme="auto">
            @if (Model.Any()){
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">MedId:</th>
                            <th scope="col">Med Name:</th>
                            <th scope="col">Description:</th>
                            <th scope="col">Route:</th>
                            <th scope="col">Active Status:</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var med in Model)
                        {
                            <tr class="hover-highlighting"><!-- Class needed for highlighting rows for ease of use. Defined in site.css -->
                                <td>@med.medId</td>
                                <td>@med.medName</td>
                                <td>@med.description</td>
                                <td>@med.route</td>

                                <td>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input active-status-checkbox" type="checkbox" id="switch@med.medId" data-medId="@med.medId" @(med.activeStatus ? "checked" : "")>
                                        <label class="form-check-label" for="switch@med.medId">@(med.activeStatus ? "Yes" : "No")</label>
                                    </div>
                                </td>
                                <!--the following won't work for anything because the edit form is not created and the delete form is not either.-->
                                <td><a type="button" class="btn blue-button" asp-controller="Patient" asp-action="PatientOverView" asp-route-medId="@med.medId"><i class="fa-solid fa-eye me-2"></i>View</a></td>

                                <td>
                                    <div class="btn-group" role="group">
                                        <form method="post" asp-controller="Medications" asp-action="DeleteMedication" asp-route-medId="@med.medId" id="deleteForm-@med.medId">
                                            <a type="button" class="btn blue-button" asp-controller="Medications" asp-action="MedEditForm" asp-route-medId="@med.medId"><i class="fa-solid fa-pen me-2"></i>Edit</a>
                                            <button type="submit" class="btn delete-button" data-medId="@med.medId">
                                                <i class="fa-solid fa-trash me-2"></i>Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }else{
                <h1 class="text-center display-6">No medications found.</h1>
            }
        </div>
    </div>
</section>