@{
    ViewData["Title"] = "Login";
}

<div class="container my-5 overflow-hidden">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-5">
            <div class="card mx-auto shadow-sm" data-bs-theme="auto">
                <div class="card-header text-center" data-bs-theme="auto">Login</div>
                <div class="card-body" data-bs-theme="auto">
                    <!-- Login Form -->
                    <form action="">
                        <!-- Username/MSTC Email Field -->
                        <div class="form-group mb-3">
                            <label for="username" class="form-label">MSTC Email:</label>
                            <input type="email" class="form-control" id="username" name="username" 
                                title="Please enter your MSTC email address." minlength="10"
                                   maxlength="100" pattern="[a-zA-Z0-9._%+-]+@@mstc\.edu$"
                                   onchange="" required data-bs-theme="auto" />
                        </div>
                        <!-- Password Field -->
                        <div class="form-group mb-3">
                            <label for="password" class="form-label">Password:</label>
                            <input type="password" class="form-control" id="password" name="password"
                                minlength="8" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@@$!%*?&])[A-Za-z\d@@$!%*?&]{8,}$"
                                   onchange="" required data-bs-theme="auto" />
                        </div>
                        <div class="mb-3 text-center">
                            <button type="submit" class="btn blue-button" data-bs-theme="auto">Login</button>
                        </div>
                    </form>
                    <!-- Forgot Password -->
                    <div class="text-center">
                        <a id="forgotPw" data-bs-theme="auto" href="#">Forgot Password?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
