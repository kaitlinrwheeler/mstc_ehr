@inject EHRApplication.Services.IListService listService
@model EHRApplication.Models.Providers
@{
    var provider = Model;
    ViewData["Title"] = "myEHR | Create Provider";
    <link rel="stylesheet" href="~/css/forms.css" />
    <script src="~/js/validation.js"></script>
}

<section class="my-5 w-75" data-bs-theme="auto">
    <div class="card-header" data-bs-theme="auto">
        <h3 class="my-3">Create Provider</h3>
    </div>

    <div class="card-body" data-bs-theme="auto">
        <form method="post" id="providerForm">
            <!-- First Name -->
            <div class="form-group">
                <label for="firstName">First Name:</label>
                <input asp-for="firstName" type="text" id="firstName" class="form-control" data-bs-theme="auto" onblur="validateRequiredInput('firstName', 'first name')" />
                <span asp-validation-for="firstName" id="firstNameError" class="validation-msg"></span>
            </div>

            <!-- Last Name -->
            <div class="form-group">
                <label for="lastName">Last Name:</label>
                <input asp-for="lastName" type="text" id="lastName" class="form-control" data-bs-theme="auto" onblur="validateRequiredInput('lastName', 'last name')" />
                <span asp-validation-for="lastName" id="lastNameError" class="validation-msg"></span>
            </div>

            <!-- Specialty -->
            <div class="form-group">
                <label for="specialty">Specialty:</label>
                <input asp-for="specialty" type="text" id="specialty" class="form-control" data-bs-theme="auto" onblur="validateRequiredInput('specialty', 'specialty')" />
                <span asp-validation-for="specialty" id="specialtyError" class="validation-msg"></span>
            </div>

            <!-- Submit Button -->
            <div class="mt-3 d-flex justify-content-center">
                <a type="button" class="btn btn-secondary me-2" onclick="window.history.back()">Cancel</a>
                <input type="submit" class="btn blue-button" data-bs-theme="auto" />
            </div>
        </form>
    </div>
</section>