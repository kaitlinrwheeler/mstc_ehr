@{
    ViewData["Title"] = "myEHR | All Providers";
    @model List<Providers>
}

<section class="my-5 w-75 m-auto">
    <div class="card shadow-sm" data-bs-theme="auto">
        <div class="h4 card-header d-flex justify-content-between align-items-center" data-bs-theme="auto">
            <div class="text-center w-100">All Providers</div>
            <div>
                <!-- Need to add controller action -->
                <a type="button" class="btn blue-button d-flex align-items-center" asp-controller="Providers" asp-action="">
                    <i class="fa-solid fa-plus me-2"></i>
                    <span>Add</span>
                </a>
            </div>
        </div>
        <div class="card-body" data-bs-theme="auto">
            @if (Model.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Provider ID</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Specialty</th>
                            <th scope="col"></th> <!-- Empty columns for the buttons -->
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var provider in Model)
                        {
                            // Need to add id for css 
                            <tr class="hover-highlighting" id="">
                                <!-- Class needed for highlighting rows for ease of use. Defined in site.css -->
                                <td>@provider.providerId</td>
                                <td>@provider.firstName</td>
                                <td>@provider.lastName</td>
                                <td>@provider.specialty</td>
                                <td>
                                    <div class="form-check form-switch">
                                        @*
                                            // need to configure active status and css
                                            <input class="form-check-input active-status-checkbox" type="checkbox" id="switch@patient.MHN" data-mhn="@patient.MHN" @(patient.Active ? "checked" : "")>
                                        
                                            // Need to add active status to db for providers
                                            //<label class="form-check-label" for="switch@patient.MHN">@(provider.Active ? "Yes" : "No")</label>
                                        *@
                                    </div>
                                </td>

                                <td>
                                    <div class="btn-group" role="group">
                                        @* // won't need delete, but need to configure edit'
                                            <form method="post" asp-controller="Patient" asp-action="DeletePatient" asp-route-mhn="@patient.MHN" id="deleteForm-@patient.MHN">
                                            <a type="button" class="btn blue-button" asp-controller="Patient" asp-action="PatientOverView" asp-route-mhn="@patient.MHN"><i class="fa-solid fa-pen me-2"></i>Edit</a>
                                            <button type="submit" class="btn delete-button" data-mhn="@patient.MHN">
                                                <i class="fa-solid fa-trash me-2"></i>Delete
                                            </button>
                                        </form> *@
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h1 class="text-center display-6">No providers found.</h1>
            }
        </div>
    </div>
</section>