@{
    ViewData["Title"] = "myEHR | Visit History";
    // The list of Visits being pulled in.
    @model EHRApplication.ViewModels.PortalViewModel
    var mhn = ViewBag.MHN;
    <link rel="stylesheet" href="~/css/.css" asp-append-version="true" />
    <script src="~/js/patientVisit.js" defer></script>
}


<section class="my-5 w-75 m-auto">
    <div class="card mb-3 shadow-sm" data-bs-theme="auto">
        <div class="h4 card-header d-flex justify-content-between align-items-center" data-bs-theme="auto">
            <div class="text-center w-100">Patient Visits</div>
            <!--This is coded here to only display if you are logged in as an Admin-->
            @if (User.IsInRole("Admin"))
            {
                <div>
                    <a type="button" class="btn blue-button d-flex align-items-center" asp-controller="Visits" asp-action="CreateVisitForm" asp-route-mhn="@mhn">
                        <i class="fa-solid fa-plus me-2"></i>
                        <span>Add</span>
                    </a>
                </div>
            }
        </div>
        <div class="card-body overflow-auto" data-bs-theme="auto">
            @if (Model != null && Model.Visits != null && Model.Visits.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Date:</th>
                            <th scope="col">Time:</th>
                            <th scope="col">Provider Name:</th>
                            <th scope="col">Admitted:</th>
                            <th scope="col">Notes:</th>
                            <th scope="col"></th> <!-- Empty column for the button -->
                            <!--This is coded here to only display if you are logged in as an Admin-->
                            @if (User.IsInRole("Admin"))
                            {
                                <th scope="col"></th> <!-- Empty column for the button -->
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var visits in Model.Visits)
                        {
                            <tr id="row-@visits.visitsId" class="hover-highlighting">
                                <td>@visits.date.ToString("MM-dd-yyyy")</td>
                                <td>@visits.time.ToString("HH:mm")</td>
                                <td>@visits.providers.firstName @visits.providers.lastName, @visits.providers.providerId</td>
                                <td>@(visits.admitted ? "Yes" : "No")</td>
                                <td>@visits.notes</td>
                                <td><a type="button" class="btn blue-button text-nowrap" asp-controller="Visits" asp-action="VisitDetails" asp-route-visitId="@visits.visitsId" asp-route-mhn="@mhn"><i class="fa-solid fa-eye me-2"></i>View</a></td>
                                <!--This is coded here to only display if you are logged in as an Admin-->
                                @if (User.IsInRole("Admin"))
                                {
                                    <td>
                                        <a type="button" class="btn blue-button text-nowrap" asp-controller="Visits" asp-action="EditVisitForm" asp-route-visitId="@visits.visitsId"><i class="fa-solid fa-pen me-2"></i>Edit</a>
                                        <button type="submit" class="btn delete-button text-nowrap" data-visit-date="@visits.date" data-provider-name="@visits.providers.firstName @visits.providers.lastName" data-patientVisitId="@visits.visitsId">
                                            <i class="fa-solid fa-trash me-2"></i>Delete
                                        </button>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h1 class="text-center display-6">No visits found.</h1>
            }
        </div>
    </div>
</section>


<!-- Delete confirmation modal-->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true" data-bs-theme="auto">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the visit on <span id="messagePlaceholder"></span>? This will delete all events associated with this visit.
            </div>
            <div class="modal-footer">
                <button id="cancelButton" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>